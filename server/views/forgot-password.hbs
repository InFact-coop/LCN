<main class="flex items-center justify-center vh-100 bg-near-white">
  <section class="flex items-center justify-between flex-column bg-white pa5-ns pa2 pv4 drop-shadow">
    <form action="/forgot-password" method="POST" class="flex items-center justify-between flex-column bg-white">
      {{> logo}}
      <div class="w-100 w-90-ns mb5 fw3 f3 tc b--blue bw2 bb pb3">
        Please enter your email address and we will send you a link to reset your password!
      </div>
      {{> flash-message}} {{> email-input}}
      <button type="submit" class="link dib bw1 f3 br3 ba ph3 pv2 center black b--dark-gray bg-white pointer mt4">Send Password Reset</button>
    </form>
  </section>
</main>
